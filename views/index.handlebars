<div class="container">
    <div class="jumbotron-fluid">
        <h1>Eat That Burger!</h1>
        <p>Create your burger and devour it!</p>
    </div>

    <div class="form-group">
        <label for="newBurger">Type name of burger</label>
        <textarea class="form-control" id="newBurger" rows="3"></textarea>
        <button type="submit" class="btn btn-success" id="addNewBurger"></button>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <h5 class="card-header text-white">Available Burgers</h5>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <h5 class="card-header text-white">Devoured Burgers</h5>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>